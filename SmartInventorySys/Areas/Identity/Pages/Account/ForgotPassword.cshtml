@page
@model SmartInventorySys.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="card shadow-lg border-0 rounded-lg">
    <div class="card-header bg-warning text-dark text-center py-4">
        <h3 class="font-weight-light my-1"><i class="fas fa-key"></i> Password Recovery</h3>
        <p class="small mb-0">Enter your email to reset your password.</p>
    </div>
    <div class="card-body p-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4 mb-0">
                <button type="submit" class="btn btn-warning btn-block py-2">Reset Password</button>
            </div>
        </form>
    </div>
    <div class="card-footer text-center py-3">
        <div class="small">
            <a asp-page="./Login" class="text-decoration-none">Return to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}