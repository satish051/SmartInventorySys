@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="mb-4 text-gray-800">Manage Your Profile</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-9">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Public Profile</h6>
            </div>
            <div class="card-body">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold text-secondary">Username</label>
                        <input asp-for="Username" class="form-control bg-light" disabled />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label fw-bold">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button id="update-profile-button" type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow mb-4 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <img src="https://ui-avatars.com/api/?name=@Model.Username&background=0D6EFD&color=fff&size=128" class="rounded-circle shadow-sm" alt="Profile">
                </div>
                <h5 class="font-weight-bold">@Model.Username</h5>
                <p class="text-muted small">Administrator</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}