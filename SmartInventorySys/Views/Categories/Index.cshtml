@model IEnumerable<SmartInventorySys.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Categories</h1>

    <div class="d-flex gap-2">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control bg-light border-0 small" placeholder="Search category..." aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>
        <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus fa-sm"></i> Add New</a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@item.Name</div>
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Active Category
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-3 text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary me-2"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="fas fa-trash"></i> Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>