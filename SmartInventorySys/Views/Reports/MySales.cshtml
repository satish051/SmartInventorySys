@model IEnumerable<SmartInventorySys.Models.Order>

@{
    ViewData["Title"] = "My Sales History";
}

<h1 class="h3 mb-4 text-gray-800">My Sales History</h1>

<div class="card shadow mb-4">
    <div class="card-body">
        <form method="get" asp-action="MySales" class="row align-items-end">

            <div class="col-md-3">
                <label class="form-label fw-bold">From Date</label>
                <input type="date" name="fromDate" value="@ViewData["FromDate"]" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">To Date</label>
                <input type="date" name="toDate" value="@ViewData["ToDate"]" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Invoice / Search</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Invoice No..." />
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">My Total Revenue (Selected Period)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Rs. @(((ViewData["MyTotalSales"] as decimal?) ?? 0).ToString("N2"))</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-wallet fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Invoice #</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.OrderNumber</td>
                            <td class="fw-bold text-success">Rs. @item.TotalAmount.ToString("N2")</td>
                            <td><span class="badge bg-success">Completed</span></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Reports/EditMyOrder/@item.Id" class="btn btn-sm btn-outline-primary" title="Edit Note">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    <a href="/Sales/Invoice/@item.Id" class="btn btn-sm btn-outline-secondary" target="_blank" title="View Receipt">
                                        <i class="fas fa-print"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>