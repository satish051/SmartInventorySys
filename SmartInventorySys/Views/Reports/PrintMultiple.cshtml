@model IEnumerable<SmartInventorySys.Models.Order>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Bulk Print Invoices</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Standard Invoice Styling */
        body {
            background: #fff;
            font-family: sans-serif;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            margin-bottom: 50px; /* Space on screen */
        }

        /* Print Logic: Force Page Break after each invoice */
        @@media print {
            .no-print {
                display: none;
            }

            .invoice-box {
                border: none;
                margin: 0;
                padding: 0;
            }

            .page-break {
                page-break-after: always;
            }
        }
    </style>
</head>
<body>

    <div class="text-center my-3 no-print">
        <button onclick="window.print()" class="btn btn-primary btn-lg">Print All</button>
        <button onclick="window.close()" class="btn btn-secondary btn-lg">Close</button>
    </div>

    @foreach (var order in Model)
    {
        <div class="invoice-box">
            <div class="d-flex justify-content-between mb-4">
                <div>
                    <h3>SmartStore</h3>
                    <p>Kathmandu, Nepal</p>
                </div>
                <div class="text-end">
                    <h4>INVOICE</h4>
                    <p><strong>#@order.OrderNumber</strong><br>@order.OrderDate.ToString("yyyy-MM-dd")</p>
                </div>
            </div>

            <table class="table table-bordered">
                <thead class="table-light">
                    <tr><th>Item</th><th>Qty</th><th>Price</th><th>Total</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in order.OrderDetails)
                    {
                        <tr>
                            <td>@(item.Product?.Name ?? "Unknown")</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice</td>
                            <td>@(item.Quantity* item.UnitPrice)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6">Payment: @order.PaymentMethod</div>
                <div class="col-6 text-end">
                    <h5>Total: Rs. @order.TotalAmount</h5>
                </div>
            </div>
        </div>

        <div class="page-break"></div>
    }

</body>
</html>