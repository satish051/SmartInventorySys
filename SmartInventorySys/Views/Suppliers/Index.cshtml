@model IEnumerable<SmartInventorySys.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Supplier Management</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-user-plus fa-sm"></i> Add Supplier</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Vendor List</h6>

        <form asp-action="Index" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control bg-light border-0 small" placeholder="Search Name / Phone..." aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <div class="input-group-append ms-1">
                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                    </div>
                }
            </div>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Company Name</th>
                        <th>Contact Person</th>
                        <th>Contact Info</th>
                        <th>Address</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@item.Name</td>
                            <td>@item.ContactPerson</td>
                            <td>
                                <div><i class="fas fa-envelope text-muted"></i> @item.Email</div>
                                <div><i class="fas fa-phone text-muted"></i> @item.Phone</div>
                            </td>
                            <td>@item.Address</td>
                            <td class="text-center align-middle">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>